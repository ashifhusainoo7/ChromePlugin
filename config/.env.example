# Environment Configuration for Google Meet Sentiment Analysis Bot
# Copy this file to .env and update values for your deployment

# Environment (development, test, production)
ENVIRONMENT=development

# Basic Application Settings
APP_NAME="Google Meet Sentiment Bot"
VERSION="1.0.0"
DEBUG=true
HOST=0.0.0.0
PORT=8000

# Security Settings
SECRET_KEY=your-secret-key-change-in-production-use-64-chars-minimum
ACCESS_TOKEN_EXPIRE_MINUTES=11520
ALGORITHM=HS256

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/meet_sentiment_bot
# For SQLite (development): sqlite:///./meet_bot.db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=20
REDIS_RETRY_ON_TIMEOUT=true

# CORS and Security
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,chrome-extension://your-extension-id
TRUSTED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Email Configuration (SMTP)
MAIL_USERNAME=your-smtp-username
MAIL_PASSWORD=your-smtp-password
MAIL_FROM=alerts@yourcompany.com
MAIL_FROM_NAME="Meet Sentiment Bot"
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_STARTTLS=true
MAIL_SSL_TLS=false
USE_CREDENTIALS=true
VALIDATE_CERTS=true

# Sentiment Analysis Configuration
SENTIMENT_MODEL=vader
# Options: vader, textblob, transformers
SENTIMENT_THRESHOLD_NEGATIVE=-0.1
SENTIMENT_THRESHOLD_POSITIVE=0.1
SENTIMENT_ANALYSIS_INTERVAL=5

# Audio Processing Configuration
AUDIO_SAMPLE_RATE=16000
AUDIO_CHUNK_SIZE=1024
AUDIO_FORMAT=wav
WHISPER_MODEL=base
# Options: tiny, base, small, medium, large

# Bot Configuration
BOT_MAX_INSTANCES=10
BOT_HEADLESS=true
BOT_TIMEOUT=300
BOT_RETRY_ATTEMPTS=3
BOT_RETRY_DELAY=5

# Monitoring and Logging
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json

# External API Keys
OPENAI_API_KEY=your-openai-api-key-if-using-openai-features
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# File Storage
UPLOAD_DIR=/tmp/uploads
MAX_FILE_SIZE=104857600
# 100MB in bytes
ALLOWED_EXTENSIONS=wav,mp3,m4a,flac

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Session Management
SESSION_TIMEOUT=3600
MAX_SESSIONS_PER_USER=5

# Sentry Error Tracking (Optional)
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Chrome Extension Settings
EXTENSION_ID=your-chrome-extension-id
EXTENSION_SECRET=your-extension-secret-key

# Webhook Configuration (Optional)
WEBHOOK_URL=https://your-webhook-endpoint.com/sentiment-alerts
WEBHOOK_SECRET=your-webhook-secret

# Slack Integration (Optional)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_CHANNEL=#alerts

# Microsoft Teams Integration (Optional)
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/your-teams-webhook

# AWS Configuration (for cloud deployment)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_DEFAULT_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-for-audio-storage

# Google Cloud Configuration (alternative)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/service-account.json
GCP_PROJECT_ID=your-gcp-project-id
GCP_STORAGE_BUCKET=your-gcs-bucket

# Advanced Security Settings
ENABLE_RATE_LIMITING=true
ENABLE_CORS_CREDENTIALS=true
COOKIE_SECURE=true
COOKIE_HTTPONLY=true
CSRF_PROTECTION=true

# Performance Tuning
WORKER_COUNT=4
WORKER_TIMEOUT=120
KEEPALIVE_TIMEOUT=5
MAX_REQUEST_SIZE=10485760

# Database Encryption (Enterprise Feature)
DB_ENCRYPTION_KEY=your-32-byte-encryption-key-base64-encoded
ENABLE_DB_ENCRYPTION=false

# Audit Logging
ENABLE_AUDIT_LOG=true
AUDIT_LOG_RETENTION_DAYS=90
AUDIT_LOG_LEVEL=INFO

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups

# Load Balancer Health Check
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_TIMEOUT=10

# Container Configuration (Docker/Kubernetes)
CONTAINER_PORT=8000
CONTAINER_WORKERS=auto
CONTAINER_MEMORY_LIMIT=2G
CONTAINER_CPU_LIMIT=1.0

# Development Settings (only used in development)
DEV_RELOAD=true
DEV_DEBUG_SQL=false
DEV_ENABLE_PROFILER=false
DEV_MOCK_EMAIL=true
DEV_MOCK_SELENIUM=false