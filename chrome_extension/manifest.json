{
  "manifest_version": 3,
  "name": "Meet Sentiment Monitor",
  "version": "1.0.0",
  "description": "Capture Google Meet audio, analyze sentiment in real time, and alert on negativity.",
  "permissions": [
    "storage",
    "scripting",
    "tabs",
    "tabCapture",
    "offscreen"
  ],
  "host_permissions": [
    "https://meet.google.com/*",
    "http://localhost/*",
    "https://localhost/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Meet Sentiment Monitor",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "minimum_chrome_version": "116"
}